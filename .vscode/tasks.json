{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "configure",
			"type": "cmake",
			"command": "configure",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
        {
            "label": "build",
            "type": "cmake",
            "command": "build",
			"dependsOn":[
				"configure"
			],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
				"$msCompile",
                "$gcc"
            ]
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": false,
        "showReuseMessage": true
    }
}